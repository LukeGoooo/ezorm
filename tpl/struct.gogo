{{define "struct"}}package {{.Package}}
{{$obj := .}}
{{if eq .Db "mongo"}}
import "gopkg.in/mgo.v2/bson"
{{end}}
{{if and (eq .Db "mssql")}}
{{if (eq getHaveTime true) }}
import "time"
{{- end}}
{{end}}
import "github.com/ezbuy/ezorm/cache"

type {{.Name}} struct {
{{- range $field := .Fields}}
{{if eq $obj.Db "mssql"}}
{{$field.Name}}  {{$field.GetGoType}}
{{- else}}
	{{- if and (eq $obj.Db "mongo") (eq $field.Name "ID")}}
	ID         bson.ObjectId `bson:"_id,omitempty"`
	{{- else}}
	{{$field.Name}}  {{$field.GetGoType}} `bson:"{{$field.Name}}"`
	{{- end -}}
{{- end -}}
{{- end -}}
{{- if and (ne .Db "") (ne .Db "mssql")}}
	isNew bool
{{- end}}
}

func (p *{{.Name}}) GetNameSpace() string {
	return "{{.Package}}"
}

func (p *{{.Name}}) GetClassName() string {
	return "{{.Name}}"
}

type _{{.Name}}Mgr struct {
}

var {{.Name}}Mgr *_{{.Name}}Mgr

var {{.Name}}Cache cache.Cache

func (m *_{{.Name}}Mgr) New{{.Name}}() *{{.Name}} {
	rval := new({{.Name}})
{{- if eq .Db "mongo"}}
	rval.isNew = true
	rval.ID = bson.NewObjectId()
{{end -}}

{{- range $field := .Fields}}
	{{- if $field.HasDefaultValue}}
	rval.{{$field.Name}} = "{{$field.DefaultValue}}"
	{{- end -}}
{{- end}}
	return rval
}
{{end}}
